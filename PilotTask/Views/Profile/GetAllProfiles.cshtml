@model IEnumerable<PilotTask.ViewModel.ProfileViewModel>

<p>
    @Html.ActionLink("Create New", "AddProfile")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Date Of Birth
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProfile", new { id = item.Id }) |
                @Html.ActionLink("Tasks", "GetTasksByProfileId", "Task", new { profileId = item.Id }, null) |
                @Html.ActionLink("Delete", "DeleteProfile", new { id = item.Id },
               new { onclick = "return confirm('are you sure wants to delete?');" })
            </td>
        </tr>
    }

</table>
